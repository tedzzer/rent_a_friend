<div class="container">
  <h1><%= @friend.name %>, <%= @friend.age %></h1>
  <h2><%= @friend.description %></h2>
  <div class="friend_images">
    <img src="https://ca.slack-edge.com/T02NE0241-U01J04GQJP8-ea52a14f9618-512" alt="Alex Rojon">
    <div class="friend_details">
      <h5>Location: <%= @friend.location %></h5>
      <p>Price to meet: <%= @friend.price %></p>
      <br>
      <p>Upcoming meet ups with <%= @friend.name %>:</p>
      <br>
      <ul class="list-group">
        <% @reservations.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %></li>
        <% end %>
      </ul>
      <br>
      <%= link_to "Request to meet up!", new_friend_reservation_path(@friend), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="friend_reviews">
    <h4>Reviews for <%= @friend.name %>:</h4>
    <%= link_to "Leave a review", new_friend_review_path(@friend), class: "btn btn-primary"%>
  </div>

<br>
  <%= link_to "Find Another Friend", friends_path(@friend), class: "btn btn-outline-primary"%>
</div>


